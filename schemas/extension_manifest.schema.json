{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "franken_node/extension_manifest/v1",
  "title": "Signed Extension Package Manifest",
  "description": "Canonical signed extension package manifest schema for section 10.4.",
  "type": "object",
  "required": [
    "schema_version",
    "package",
    "entrypoint",
    "capabilities",
    "behavioral_profile",
    "minimum_runtime_version",
    "provenance",
    "trust",
    "signature"
  ],
  "properties": {
    "schema_version": {
      "const": "1.0",
      "description": "Schema version for manifest compatibility checks."
    },
    "package": {
      "type": "object",
      "required": [
        "name",
        "version",
        "publisher",
        "author"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "publisher": {
          "type": "string",
          "minLength": 1
        },
        "author": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "entrypoint": {
      "type": "string",
      "minLength": 1
    },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "fs_read",
          "fs_write",
          "network_egress",
          "process_spawn",
          "env_read"
        ]
      }
    },
    "behavioral_profile": {
      "type": "object",
      "required": [
        "risk_tier",
        "summary",
        "declared_network_zones"
      ],
      "properties": {
        "risk_tier": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ]
        },
        "summary": {
          "type": "string",
          "minLength": 1
        },
        "declared_network_zones": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "additionalProperties": false
    },
    "minimum_runtime_version": {
      "type": "string",
      "minLength": 1
    },
    "provenance": {
      "type": "object",
      "required": [
        "build_system",
        "source_repository",
        "source_revision",
        "reproducibility_markers",
        "attestation_chain"
      ],
      "properties": {
        "build_system": {
          "type": "string",
          "minLength": 1
        },
        "source_repository": {
          "type": "string",
          "minLength": 1
        },
        "source_revision": {
          "type": "string",
          "minLength": 1
        },
        "reproducibility_markers": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "attestation_chain": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "id",
              "attestation_type",
              "digest"
            ],
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "attestation_type": {
                "type": "string",
                "minLength": 1
              },
              "digest": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "trust": {
      "type": "object",
      "required": [
        "certification_level",
        "revocation_status_pointer",
        "trust_card_reference"
      ],
      "properties": {
        "certification_level": {
          "type": "string",
          "enum": [
            "community",
            "verified",
            "hardened",
            "critical"
          ]
        },
        "revocation_status_pointer": {
          "type": "string",
          "minLength": 1
        },
        "trust_card_reference": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "signature": {
      "type": "object",
      "required": [
        "scheme",
        "publisher_key_id",
        "signature",
        "signed_at"
      ],
      "properties": {
        "scheme": {
          "type": "string",
          "enum": [
            "ed25519",
            "threshold_ed25519"
          ]
        },
        "publisher_key_id": {
          "type": "string",
          "minLength": 1
        },
        "signature": {
          "type": "string",
          "minLength": 4,
          "pattern": "^[A-Za-z0-9+/=]+$"
        },
        "signed_at": {
          "type": "string",
          "format": "date-time"
        },
        "threshold": {
          "type": "object",
          "required": [
            "threshold",
            "total_signers",
            "signer_key_ids"
          ],
          "properties": {
            "threshold": {
              "type": "integer",
              "minimum": 1
            },
            "total_signers": {
              "type": "integer",
              "minimum": 1
            },
            "signer_key_ids": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "minLength": 1
              }
            }
          },
          "additionalProperties": false
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "scheme": {
                "const": "threshold_ed25519"
              }
            }
          },
          "then": {
            "required": [
              "threshold"
            ]
          },
          "else": {
            "not": {
              "required": [
                "threshold"
              ]
            }
          }
        }
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
